@model BillingManagementWebApp.Models.ViewModels.FlatViewModel
@{
    ViewData["Title"] = "Details";
    <style>
        #fontfordetailsofflats {
            font-size: 18px;
        }
    </style>
}
<div>
    <h4>Flats</h4>
    <hr />
    <dl id="fontfordetailsofflats" class="row text-xl-start">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.User)</dd>
        <dt class="col-sm-2">BlockName</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BlockName)</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>
        <dt class="col-sm-2">Floor Number</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FloorNo)</dd>
        <dt class="col-sm-2">Door Number</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DoorNumber)</dd>
        <dt class="col-sm-2">Is the flat empthy?</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsEmpthy)</dd>
    </dl>
</div>
<div>
    @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role).Value == "Admin")
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    
</div>
