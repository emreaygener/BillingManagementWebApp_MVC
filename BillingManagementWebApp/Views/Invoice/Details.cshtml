@model BillingManagementWebApp.Models.ViewModels.InvoiceViewModel
@{
    ViewData["Title"] = "Details";
    <style>
        #fontfordetailsofInvoices {
            font-size: 18px;
        }
    </style>
}
<div>
    <h4>Invoices</h4>
    <hr />
    <dl id="fontfordetailsofInvoices" class="row text-xl-start">
        <dt class="col-sm-2">Date Created</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateCreated)</dd>
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.User)</dd>
        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cost)</dd>
        <dt class="col-sm-2">Date Invoice Paid</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateInvoicePaid)</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>
    </dl>
</div>
<div>
    @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role).Value == "Admin")
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>

</div>
